{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "outDir": "./dist",
    "pretty": true,
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "es2018"
  },
  "include": ["./src/*.ts"],
  "exclude": ["./node_modules"]
}
